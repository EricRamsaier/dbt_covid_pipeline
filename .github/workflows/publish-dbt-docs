name: Publish dbt docs to GitHub Pages

on:
  push:
    branches:
      - main

jobs:
  publish-docs:
    runs-on: ubuntu-latest
    
    permissions:
      pages: write      # allow this job to deploy to GitHub Pages
      id-token: write   # required by newer actions
      contents: read    # read your repo contents
    
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3
        with:
          fetch-depth: 0       # needed for gh-pages branch pushes

      - name: Set up Python & install dbt
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'

      - name: Install dbt
        run: |
          pip install dbt-core dbt-snowflake  # adjust adapter as needed

      - name: dbt deps
        run: dbt deps

      - name: Generate docs
        run: dbt docs generate

      - name: Publish to GitHub Pages
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_branch: gh-pages
          publish_dir: ./target
